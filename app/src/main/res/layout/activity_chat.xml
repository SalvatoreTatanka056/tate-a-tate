<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#090909"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/messageEdit"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="21dp"
            android:layout_toLeftOf="@+id/chatSendButton"
            android:ellipsize="none"
            android:textColor="#FBF7F7"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/chatSendButton"
            style="@android:style/Widget.DeviceDefault.Button"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@android:drawable/ic_menu_send"
            android:textColor="?android:attr/textColorLink"
            tools:ignore="SpeakableTextPresentCheck" />

        <ProgressBar
            android:id="@+id/prgMain"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/imageViewMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/cattura_preview_rev_1"
            tools:srcCompat="@drawable/cattura_preview_rev_1" />

        <ListView
            android:id="@+id/messagesContainer"
            style="@style/Dark"
            android:background="@color/common_google_signin_btn_text_light_focused"
            android:cacheColorHint="#02FFFFFF">


        </ListView>

        <TextView
            android:id="@+id/meLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left|center_vertical"
            android:singleLine="false"
            android:textSize="20dp"
            tools:visibility="invisible" />

        <EditText
            android:id="@+id/editTextTextMultiLine"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:textColor="?attr/colorAccent"
            android:textSize="8sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/BtnExit"
            android:layout_width="24dp"
            android:layout_height="39dp"
            android:layout_alignStart="@id/editTextTextMultiLine"
            android:layout_alignLeft="@id/editTextTextMultiLine"
            android:layout_marginStart="337dp"
            android:layout_marginLeft="337dp"
            app:srcCompat="@android:drawable/ic_input_add"
            tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/messageEdit"
            android:layout_alignLeft="@id/btnIncolla"
            android:layout_marginStart="271dp"
            android:layout_marginLeft="271dp"
            android:background="#000000"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:srcCompat="?attr/actionModeCopyDrawable"
            app:tint="#FFFFFF"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/btnPlay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/messageEdit"
            android:layout_alignLeft="@id/messageEdit"
            android:layout_marginStart="320dp"
            android:layout_marginLeft="320dp"
            android:background="#000000"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:srcCompat="@android:drawable/ic_lock_power_off"
            app:tint="#FFFFFF"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/btnIncolla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/messageEdit"
            android:layout_alignLeft="@id/btnCancella"
            android:layout_marginStart="222dp"
            android:layout_marginLeft="222dp"
            android:background="#000000"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:srcCompat="?attr/actionModePasteDrawable"
            app:tint="#FFFFFF"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

        <ImageButton
            android:id="@+id/btnCancella"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/messageEdit"
            android:layout_alignLeft="@id/messageEdit"
            android:layout_marginStart="174dp"
            android:layout_marginLeft="174dp"
            android:background="#000000"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:srcCompat="@android:drawable/ic_popup_sync"
            app:tint="#FFFFFF"
            tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="21dp"
            android:minHeight="48dp"
            android:visibility="invisible"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/chatAudioButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="13dp"
            android:background="@android:drawable/ic_btn_speak_now" />


    </RelativeLayout>
</LinearLayout>
