<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <!--  <item name="android:windowBackground">@android:color/holo_green_light</item> -->

    </style>

    <style name="SplashTheme" parent ="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/messageEdit</item>
        <item name="android:layout_below">@+id/meLbl</item>
        <item name="android:layout_alignParentLeft">false</item>
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">22dp</item>
        <item name="android:divider">@null</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:transcriptMode">alwaysScroll</item>


    </style>

</resources>
